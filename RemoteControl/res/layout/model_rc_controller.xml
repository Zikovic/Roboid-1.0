<?xml version="1.0" encoding="utf-8"?>
<view xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:roboid10="http://schemas.android.com/apk/res/univ.avignon.roboid10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    class="univ.avignon.roboid10.view.remote.ClassicControllerBehavior"
    tools:context=".RemoteControlActivity" >

    <view
        android:id="@+id/leftJoystick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        class="univ.avignon.roboid10.view.remote.JoystickView"
        roboid10:axes="vertical"
        roboid10:radius="75dp" />

    <view
        android:id="@+id/rightJoystick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        class="univ.avignon.roboid10.view.remote.JoystickView"
        roboid10:axes="horizontal"
        roboid10:radius="75dp" />

</view>