<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:roboid10="http://schemas.android.com/apk/res/univ.avignon.roboid10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RemoteControlActivity" >

    <view
        android:id="@+id/stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="univ.avignon.roboid10.view.video.VideoStreamView" />

    <FrameLayout
        android:id="@+id/controlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent" >

        <view
            android:id="@+id/leftJoystick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            class="univ.avignon.roboid10.view.remote.JoystickView"
            roboid10:axes="vertical"
            roboid10:radius="75dp"
            roboid10:color="@android:color/holo_blue_bright" />

        <view
            android:id="@+id/rightJoystick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            class="univ.avignon.roboid10.view.remote.JoystickView"
            roboid10:axes="horizontal"
            roboid10:radius="75dp" />
    </FrameLayout>

</merge>